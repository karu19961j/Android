<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.karan.optionsmenu.ShowActivity"
    tools:showIn="@layout/activity_show">

    <TextView
        android:text="Student Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/showHeading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/showHeading"
        android:layout_alignRight="@+id/showHeading"
        android:layout_alignEnd="@+id/showHeading"
        android:layout_marginTop="48dp"
        android:id="@+id/showFname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/showFname"
        android:layout_alignLeft="@+id/showFname"
        android:layout_alignStart="@+id/showFname"
        android:layout_marginTop="27dp"
        android:id="@+id/showLname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="43dp"
        android:id="@+id/showPhone"
        android:layout_below="@+id/showLname"
        android:layout_alignLeft="@+id/showLname"
        android:layout_alignStart="@+id/showLname" />

    <Button
        android:text="Delete Record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/showUpdateRecord"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp"
        android:id="@+id/showDeleteRecord"
        android:onClick="deleteRecord"/>

    <Button
        android:text="Update Record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/showUpdateRecord"
        android:layout_below="@+id/showPhone"
        android:layout_alignLeft="@+id/showPhone"
        android:layout_alignStart="@+id/showPhone"
        android:onClick="updateRecord"/>

</RelativeLayout>